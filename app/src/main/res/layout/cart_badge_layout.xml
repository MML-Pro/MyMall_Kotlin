<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingStart="8dp"
    android:focusable="true"
    android:clipToPadding="false"
    android:background="?attr/selectableItemBackground"
    android:paddingEnd="8dp">

    <ImageView
        android:id="@+id/cart_badge_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/baseline_shopping_cart" />

    <TextView
        android:id="@+id/cart_badge_count"
        android:layout_width="@dimen/_12sdp"
        android:layout_height="@dimen/_12sdp"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/badge_count"
        android:gravity="center"
        android:text="0"
        android:textColor="@color/white"
        android:textSize="@dimen/_8ssp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/cart_badge_icon"
        app:layout_constraintStart_toStartOf="@+id/cart_badge_icon">

    </TextView>

</androidx.constraintlayout.widget.ConstraintLayout>